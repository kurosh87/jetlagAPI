{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api",
      "dest": "/api/index.ts"
    },
    {
      "src": "/api/test",
      "dest": "/api/test.ts"
    },
    {
      "src": "/api/calculate",
      "dest": "/api/calculate.ts",
      "methods": ["POST"]
    },
    {
      "src": "/api/chronotype",
      "dest": "/api/chronotype.ts",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/api/flights/search",
      "dest": "/api/flights/search.ts",
      "methods": ["GET"]
    },
    {
      "src": "/api/airports/search",
      "dest": "/api/airports/search.ts",
      "methods": ["GET"]
    },
    {
      "src": "/api/weather/location",
      "dest": "/api/weather/location.ts",
      "methods": ["GET"]
    },
    {
      "src": "/api/weather/airport",
      "dest": "/api/weather/airport.ts",
      "methods": ["GET"]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 