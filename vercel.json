{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api", "destination": "/api/index.ts" },
    { "source": "/api/test", "destination": "/api/test.ts" },
    { "source": "/api/calculate", "destination": "/api/calculate.ts" },
    { "source": "/api/chronotype", "destination": "/api/chronotype.ts" },
    { "source": "/api/flights/search", "destination": "/api/flights/search.ts" },
    { "source": "/api/airports/search", "destination": "/api/airports/search.ts" },
    { "source": "/api/weather/location", "destination": "/api/weather/location.ts" },
    { "source": "/api/weather/airport", "destination": "/api/weather/airport.ts" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version" }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 